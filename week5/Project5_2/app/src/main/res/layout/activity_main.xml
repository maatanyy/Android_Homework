<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="5"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="num1 입력"
        android:text="" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_span="5"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="num2 입력"
        android:text="" />


    <TableRow android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn0"
            android:text="0" />

        <Button
            android:id="@+id/btn1"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:text="3" />

        <Button
            android:id="@+id/btn4"
            android:text="4" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn5"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:text="9" />
    </TableRow>

    <TableRow android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btnplus"
            android:layout_span="5"
            android:text="더하기" />
    </TableRow>

    <TableRow android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnminus"
            android:layout_span="5"
            android:text="빼기" />
    </TableRow>

    <TableRow android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnmulti"
            android:layout_span="5"
            android:text="곱하기" />
    </TableRow>

    <TableRow android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btndivide"
            android:layout_span="5"
            android:text="나누기" />
    </TableRow>

    <TableRow android:layout_marginTop="20dp">

        <TextView android:layout_span="5"
            android:id="@+id/textResult"
            android:textSize="20dp"
            />
    </TableRow>

    <TableRow>
    <TextView android:layout_span="5"
        android:text="2018038076 노민성"
        android:textSize="20dp"
        />
    </TableRow>

</TableLayout>